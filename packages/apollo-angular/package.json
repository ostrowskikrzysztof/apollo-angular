{
  "name": "apollo-angular",
  "description": "Use your GraphQL data in your Angular app, with the Apollo Client",
  "version": "2.0.0-alpha.0",
  "author": "Kamil Kisiela <kamil.kisiela@gmail.com> (http://github.com/kamilkisiela/)",
  "license": "MIT",
  "sideEffects": false,
  "main": "build/bundles/ngApollo.umd.js",
  "module": "build/fesm5/ngApollo.js",
  "typings": "build/ngApollo.d.ts",
  "homepage": "https://www.apollographql.com/docs/angular/",
  "repository": "https://github.com/apollographql/apollo-angular/tree/master/packages/apollo-angular",
  "keywords": [
    "apollo",
    "graphql",
    "angular",
    "schematics",
    "angular-schematics"
  ],
  "scripts": {
    "build": "ng-packagr -p ng-package.js && yarn build:schematics",
    "build:schematics": "tsc -p schematics/tsconfig.json && node ./scripts/move-schematics.js",
    "test": "yarn test-only",
    "posttest": "yarn test:testing && yarn test:schematics",
    "test-only": "jest --config jest.config.js",
    "test:testing": "jest --config testing/jest.config.js",
    "test:schematics": "jest --config schematics/jest.config.js",
    "prebuild": "rm -rf build/",
    "deploy": "yarn build && npm publish build --registry http://localhost:4873"
  },
  "peerDependencies": {
    "@angular/core": "^6.1.0 || ^7.0.0 || ^8.0.0 || ^9.0.0",
    "@apollo/client": "^3.0.0-beta.12",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.20 || ~0.9.0 || ~0.10.0"
  },
  "devDependencies": {
    "@angular-devkit/core": "8.3.19",
    "@angular-devkit/schematics": "8.3.19",
    "@angular/common": "8.2.14",
    "@angular/compiler": "8.2.14",
    "@angular/compiler-cli": "8.2.14",
    "@angular/core": "8.2.14",
    "@angular/platform-browser": "8.2.14",
    "@angular/platform-browser-dynamic": "8.2.14",
    "@apollo/client": "3.0.0-beta.12",
    "@schematics/angular": "8.3.19",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.11",
    "@types/semver": "6.2.0",
    "cpx": "1.5.0",
    "graphql": "14.5.8",
    "jest": "24.9.0",
    "jest-zone-patch": "0.0.10",
    "ng-packagr": "5.7.1",
    "rxjs": "6.5.3",
    "ts-jest": "24.1.0",
    "typescript": "3.5.3",
    "zone.js": "0.10.2"
  },
  "schematics": "./schematics/collection.json",
  "ng-update": {
    "requirements": {},
    "migrations": "./schematics/migrations.json",
    "packageGroupName": "apollo-angular",
    "packageGroup": [
      "apollo-angular",
      "@apollo/client",
      "apollo-angular-link-http",
      "graphql"
    ]
  }
}
